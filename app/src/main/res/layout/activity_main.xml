<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="24dp"

        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/card"
        android:elevation="4dp"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/for_text"
            android:layout_margin="10dp"
            android:textSize="24sp"
            android:textColor="@color/black"/>
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spn_for"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:popupBackground="@color/white">
        </android.support.v7.widget.AppCompatSpinner>
        <EditText
            android:id="@+id/edt_amount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="24sp"
            android:hint="@string/enter_amount"
            android:background="@drawable/edit_bg"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:background="@drawable/card"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hom_text"
            android:layout_margin="10dp"
            android:textSize="24sp"
            android:textColor="@color/black"/>
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spn_hom"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hom_cal"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/txt_converted"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:textSize="24sp"
            android:background="@drawable/edit_bg"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_calc"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="10dp"
        android:text="@string/btn_cal"
        android:backgroundTint="#00CED1"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/trendActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:text="@string/btn_cal"
        android:backgroundTint="#00CED1"
        android:textColor="@color/white"/>
</LinearLayout>
